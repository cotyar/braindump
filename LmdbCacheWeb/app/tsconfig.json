{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "frontend/src",
    "target": "ES6",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "listFiles": true,
  },
  "exclude": [
    "node_modules",
    "**/__tests__/**"
  ]
}
